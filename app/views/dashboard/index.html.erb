<div class="container py-2">
  <div class="row">
    <aside class="col side-navbar">
      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 px-3" do %>
        <div class="px-2 py-1 rounded-circle">
          <%= image_tag "twitter.png", width: "32" %>
        </div>
      <% end %>

      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative home" style="bottom: 4px"><%= image_tag "home-white.png", width: "32" %></span>
          Home
        </div>
      <% end %>

      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative" style="bottom: 4px"><%= image_tag "hashtag.png", width: "32" %></span>
          Explore
        </div>
      <% end %>

      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative" style="bottom: 4px"><%= image_tag "notifications.png", width: "32" %></span>
          Notifications
        </div>
      <% end %>

      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative" style="bottom: 4px"><%= image_tag "messages.png", width: "32" %></span>
          Messages
        </div>
      <% end %>


      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative" style="bottom: 4px"><%= image_tag "bookmark-white.png", width: "32" %></span>
          Bookmarks
        </div>
      <% end %>

      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>
        <div class="px-4 py-2 rounded-pill">
          <span class="me-4 position-relative" style="bottom: 4px"><%= image_tag "profile.png", width: "32" %></span>
          Profile
        </div>
      <% end %>

      <div class="d-flex align-items-center fs-5 mb-2 px-4 py-3 ">
          <%= button_tag "Tweet", class: "btn btn-twitter w-100 btn-lg rounded-pill"  %>
      </div>
      <%= link_to root_path, class: "d-flex align-items center fs-5 mb-2 " do  %>

      <% end %>

      <%= link_to "Log Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-primary btn-lg" %>
    </aside>

    <div class="col-7">
      <%= form_with model: Tweet.new, url: tweets_path, local: true do |f| %>
        <%= f.text_field :body %>
        <%= f.submit %>
      <% end %>
      <ul>
        <%= Tweet.find_each do |tweet| %>
        <li><%= tweet.body %></li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      Column
    </div>
  </div>
</div>
