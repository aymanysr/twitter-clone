<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div class="tweet d-flex py-3 px-3">
    <div class="flex-shrink-0">
      <%= cl_image_tag tweet_presenter.avatar.key,
      :aspect_ratio=>"1:1",
      :border=>"1px_solid_rgb:ffffff",
      :gravity=>"face",
      :height=>48,
      :quality=>"auto",
      :radius=>"max",
      :width=>48,
      :crop=>"fill",
      :fetch_format=>:auto %>
    </div>

    <div class="flex-grow-1 ms-3">

    <p class="mb-0">
      <span class="fw-bolder"><%= tweet_presenter.display_name %></span>
      <span class="text-muted">
        @<%= tweet_presenter.username %> Â· <%= tweet_presenter.created_at %></span>
    </p>
    <p class="mb-0"><%= tweet_presenter.body %></p>
    </div>
  </div>
<% end %>
